<div class= 'col-9'>
  <%= search_form_for @q do |f| %>
    <div class='form-group'>
      <%= f.label :search_cont, t('.search_label') %>
      <%= f.search_field :search_cont, value: params.dig(:q, :search_cont), class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= f.label :search_cont, t('.author_label') %>
      <%= f.collection_select :author_id_eq, @authors, :id, :full_name, { include_blank: true }, class: 'form-select' %>
    </div>

    <div class='form-group'>
      <%= f.label :search_cont, t('.supplier_label') %>
      <%= f.collection_select :supplier_id_eq, @suppliers, :id, :name, { include_blank: true }, class: 'form-select' %>
    </div>

    <div class='form-group'>
      <%= f.label :search_cont, t('.category_label') %>
      <%= f.collection_select :categories_id_eq, @categories, :id, :name, { include_blank:true }, class: 'form-select' %>
    </div>

    <%= f.submit t('.search'), class: 'btn btn-outline-secondary form-control mt-2' %>
  <% end %>
</div>
