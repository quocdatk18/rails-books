<div class='modal fade' id='modal_borrow_book' tabindex='-1' aria-hidden='true'>
  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title'><%= t('.borrow_book', book_title: book.title) %></h5>
        <button type='button' class='btn-close' data-bs-dismiss='modal'></button>
      </div>
      <%= form_for book_borrow, remote: true, url: book_borrows_path do |form| %>
        <div class='modal-body'>
          <p id="notice" class='text-danger'></p>
          <%= form.hidden_field :book_id, value: book.id %>
          <div class='mb-3'>
            <%= form.label :from, class: 'col-form-label' %>
            <%= form.date_field :from, class: 'form-control' %>
          </div>
          <div class='mb-3'>
            <%= form.label :to, class: 'col-form-label' %>
            <%= form.date_field :to, class: 'form-control' %>
          </div>
        </div>
        <div class='modal-footer'>
          <%= form.submit t('.submit'), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
