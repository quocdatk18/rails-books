<div class='form_category'>
  <div class='form'>
    <%= form_with(model: [:admin, @category]) do |f|%>
      <div class='form-item'>
        <%= f.label :name, style: 'display: block' %>
        <%= f.text_field :name %>
        <%= render 'shared/input_error', error_message: @category.errors[:name].first %>
      </div>
      <div class='form-item'>
        <%= f.label :description , style: 'display: block' %>
        <%= f.text_field :description %>
        <%= render 'shared/input_error', error_message: @category.errors[:description].first %>
      </div>
      <div class='form-submit'>
        <%= f.submit t('.submit'), class: 'btn btn-outline-primary' %>
      </div>
    <% end %>
  </div>
</div>
