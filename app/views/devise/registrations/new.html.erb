<div class='container-fluid authentica'>
  <div class= 'sub_authentica'>
    <h2 class='text-center titles'><%= t('sign_up') %></h2>
    <%= form_for(@user, url: registration_path(@user), data: { turbo: false }) do |f| %>
      <div class='form-group'>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        <p style='color: red;' class= 'notion'><%= resource.errors.full_messages_for(:email)[0] if resource.errors.any? %></p>
      </div>

      <div class= 'row'>
        <div class='form-group'>
          <div class='float-left w-25'>
            <%= f.label :gender %>
            <%= f.select :gender, User.genders.map{|k,_v| [t(k), k]},{}, {class: 'form-select'}%>
          </div>
          <div class='float-right' style='width: 70%;'>
            <%= f.label :user_name %>
            <%= f.text_field :user_name, class: 'form-control' %>
          </div>
        </div>
        </div>

      <div class='form-group'>
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control' %>
        <p style='color: red;' class= 'notion'><%= resource.errors.full_messages_for(:password)[0]  if resource.errors.any? %></p>
      </div>

      <div class='form-group'>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control' %>
        <p style='color: red;' class= 'notion'><%= resource.errors.full_messages_for(:password_confirmation)[0]  if resource.errors.any? %></p>
      </div>

      <div class='form-group'>
        <%= f.label :phone %>
        <%= f.telephone_field :phone, class: 'form-control' %>
        <p style='color: red;' class= 'notion'><%= resource.errors.full_messages_for(:phone)[0]  if resource.errors.any? %></p>
      </div>

      <div class='actions'>
        <%= f.submit t('sign_up'), class: 'btn btn-primary w-100' %>
      </div>
    <% end %>

  <%= render 'devise/shared/links' %>
  </div>
</div>
