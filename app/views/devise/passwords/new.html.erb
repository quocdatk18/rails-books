<div class='container-fluid authentica'>
  <div class= 'sub_authentica'>
    <h2 class='text-center titles'><%= t('forgot') %></h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), data: { turbo: false }) do |f| %>
      <div class='mb-3'>
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
        <p style='color: red;' class= 'notion'><%= resource.errors.full_messages_for(:email)[0] if resource.errors.any? %></p>
      </div>
      <div class='actions'>
        <%= f.submit t('send_mail'), class: 'btn btn-primary w-100' %>
      </div>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>
